<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:zhy="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">




    <RelativeLayout
        android:visibility="visible"
        android:id="@+id/shiping_rl"
        android:background="@color/BLACK"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <SurfaceView
            android:layout_width="match_parent"
            android:id="@+id/fff"
            android:layout_height="match_parent" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="250dp"
                android:id="@+id/ffff"
                android:scaleType="fitXY"
                android:layout_marginRight="16dp"
                android:layout_height="250dp"
                android:layout_marginTop="16dp" />
            <TextView
                android:textSize="20sp"
                android:textColor="@color/white"
                android:id="@+id/tishi"
                android:background="@color/black"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </RelativeLayout>

<LinearLayout
    android:orientation="vertical"
    android:id="@+id/jiemian"
    android:background="@color/blake"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<RelativeLayout
    android:layout_weight="1"
    android:gravity="center_vertical"
    android:layout_width="match_parent"
    android:layout_height="0dp">
    <ImageView
        android:layout_width="62dp"
        android:padding="15dp"
        android:layout_centerVertical="true"
        android:id="@+id/dd"
        android:layout_marginLeft="16dp"
        android:src="@drawable/fanhui"
        android:layout_height="62dp" />

<TextView
    android:text="返回"
    android:textSize="14sp"
    android:layout_toRightOf="@+id/dd"
    android:layout_marginLeft="-10dp"
    android:clickable="false"
    android:layout_centerVertical="true"
    android:textColor="@color/write"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" />

    <ImageView
        android:layout_width="80dp"
        android:id="@+id/dd22"
        android:background="@drawable/gonganlogo"
        android:layout_height="80dp"
       android:layout_centerVertical="true"
        android:layout_toStartOf="@+id/linearLayout2" />

    <LinearLayout
        android:layout_gravity="center"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout2">

        <TextView
            android:text="人证合一智能识别系统"
            android:layout_marginLeft="6dp"
            android:textSize="22sp"
            android:textColor="@color/write"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:text="INTELLIGENT IDENTIFICAION SYSTEM"
            android:layout_marginLeft="6dp"
            android:textSize="18sp"
            android:textColor="@color/write"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

</RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.4"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:text="姓名:"
                    android:textColor="@color/write"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/name"
                    android:focusable="false"
                    android:layout_width="150dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/zidonghuoqu10"
                    android:paddingLeft="6dp"
                    android:textColor="@color/blake" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="身份证:"
                    android:textColor="@color/write"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/shenfenzheng"
                    android:layout_width="350dp"
                    android:layout_height="40dp"
                    android:focusable="false"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/zidonghuoqu10"
                    android:paddingLeft="6dp"
                    android:textColor="@color/blake" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="姓别:"
                    android:textColor="@color/write"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/xingbie"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:focusable="false"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/zidonghuoqu10"
                    android:paddingLeft="6dp"
                    android:textColor="@color/blake" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:text="名族:"
                    android:textColor="@color/write"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/mingzu"
                    android:layout_width="80dp"
                    android:focusable="false"
                    android:paddingLeft="6dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/zidonghuoqu10"
                    android:textColor="@color/blake" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="出生:"
                    android:textColor="@color/write"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/chusheng"
                    android:layout_width="250dp"
                    android:focusable="false"
                    android:layout_height="40dp"
                    android:paddingLeft="6dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/zidonghuoqu10"
                    android:textColor="@color/blake" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="电话:"
                    android:textColor="@color/write"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/dianhua"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:paddingLeft="6dp"
                    android:maxLength="11"
                    android:inputType="phone"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/zidonghuoqu10"
                    android:textColor="@color/blake" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:text="发证\n机关:"
                    android:textColor="@color/write"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/jiguan"
                    android:layout_width="370dp"
                    android:layout_height="40dp"
                    android:focusable="false"
                    android:paddingLeft="6dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/zidonghuoqu10"
                    android:textColor="@color/blake" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="有效\n期限:"
                    android:textColor="@color/write"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/qixian"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:focusable="false"
                    android:paddingLeft="6dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/zidonghuoqu10"
                    android:textColor="@color/blake" />


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.2sp"
                android:layout_marginLeft="16dp"
                android:background="@color/write" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:text="住址:"
                    android:textColor="@color/write"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/dizhi"
                    android:focusable="false"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="10dp"
                    android:paddingLeft="6dp"
                    android:background="@drawable/zidonghuoqu10"
                    android:textColor="@color/blake" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"

                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:text="房号:"
                    android:textColor="@color/write"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/fanghao"
                    android:layout_width="290dp"
                    android:layout_height="40dp"
                    android:paddingLeft="6dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/zidonghuoqu10"
                    android:textColor="@color/blake" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="车牌号码:"
                    android:textColor="@color/write"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/chepai"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="10dp"
                    android:paddingLeft="6dp"
                    android:background="@drawable/zidonghuoqu10"
                    android:textColor="@color/blake" />

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"

            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/zhengjian"
                        android:layout_width="190dp"
                        android:scaleType="fitXY"
                        android:layout_height="210dp"
                        android:background="@drawable/zidonghuoqu5" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ems="1"
                       android:layout_marginLeft="6dp"
                        android:text="证件照"
                        android:textColor="@color/write"
                        android:textSize="18sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/paizhao"
                        android:layout_width="260dp"
                        android:scaleType="fitXY"
                        android:layout_height="210dp"
                        android:background="@drawable/zidonghuoqu5" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="6dp"
                        android:text="现场照"
                        android:ems="1"
                        android:textColor="@color/write"
                        android:textSize="18sp" />
                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="90dp"
                android:layout_weight="0.3"
                android:gravity="top|center_horizontal"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="比对结果:"
                        android:textColor="@color/write"
                        android:textSize="18sp" />

                    <EditText
                        android:id="@+id/jieguo"
                        android:layout_width="200dp"
                        android:focusable="false"
                        android:paddingLeft="6dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/zidonghuoqu10"
                        android:textColor="@color/blake" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.8"
                    android:layout_marginLeft="-30dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="相 似 度 :"
                        android:textColor="@color/write"
                        android:textSize="18sp" />

                    <EditText
                        android:id="@+id/xiangsidu"
                        android:layout_width="200dp"
                        android:layout_height="40dp"
                        android:focusable="false"
                        android:paddingLeft="6dp"
                        android:layout_marginLeft="14dp"
                        android:background="@drawable/zidonghuoqu10"
                        android:textColor="@color/blake" />

                </LinearLayout>


            </LinearLayout>


        </LinearLayout>


    </LinearLayout>

    <com.camera.simplewebcam.view.HorizontalProgressBarWithNumber
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        zhy:progress_text_size="18sp"
        android:visibility="gone"
        android:id="@+id/id_progressbar01"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        zhy:progress_text_color="#ff2903FC"
        zhy:progress_unreached_color="#bbb8c7" />

    <LinearLayout
        android:layout_weight="0.5"
        android:gravity="top|center_horizontal"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <Button
            android:text="完 成"
            android:textSize="16sp"
            android:id="@+id/wancheng"
            android:layout_marginRight="20dp"
            android:textColor="@color/write"
            android:background="@drawable/jiaohu"
            android:layout_width="130dp"
            android:layout_height="50dp" />

        <Button
            android:text="取消"
            android:textSize="16sp"
            android:visibility="gone"
            android:layout_marginLeft="20dp"
            android:id="@+id/quxiao"
            android:textColor="@color/write"
            android:background="@drawable/jiaohu"
            android:layout_width="130dp"
            android:layout_height="50dp" />

    </LinearLayout>
</LinearLayout>




</RelativeLayout>