<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:background="@color/write"
        android:layout_width="match_parent"
        android:layout_height="80dp">
        <ImageView
            android:layout_width="50dp"
            android:id="@+id/dd"
            android:background="@drawable/gonganlogo"
            android:layout_height="50dp" />



        <LinearLayout
            android:layout_gravity="center"
            android:orientation="vertical"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/linearLayout2">

            <TextView
                android:text="人证合一智能识别系统"
                android:layout_marginLeft="6dp"
                android:textSize="18sp"
                android:textColor="@color/blake"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:text="INTELLIGENT IDENTIFICAION SYSTEM"
                android:layout_marginLeft="6dp"
                android:textSize="14sp"
                android:textColor="@color/blake"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/beijing">

        <LinearLayout
            android:id="@+id/f4"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginTop="140dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/dengji2"
                android:layout_width="170dp"
                android:layout_height="60dp"
                android:background="@drawable/jiaohu7"
                android:gravity="center"
                android:text="身份证住宿登记"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/dengji3"
                android:layout_width="170dp"
                android:layout_height="60dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/jiaohu7"
                android:gravity="center"
                android:text="护照住宿登记"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/dengji4"
                android:layout_width="170dp"
                android:layout_height="60dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/jiaohu7"
                android:gravity="center"
                android:text="退房登记"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold" />


        </LinearLayout>


        <TextView
            android:layout_width="86dp"
            android:id="@+id/shezhi"
            android:layout_height="86dp"/>


        <TextView
            android:textColor="@color/write"
            android:textSize="20sp"
            android:text="警讯公告"
            android:layout_above="@+id/tishi_ll"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="match_parent"
            android:id="@+id/tishi_ll"
            android:background="@drawable/zidonghuoqu3"
            android:layout_alignParentBottom="true"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_margin="10dp"
            android:layout_height="200dp">


        </LinearLayout>


    </RelativeLayout>



</LinearLayout>